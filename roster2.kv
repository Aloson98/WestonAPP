#:kivy 2.2.1


#custom widget for reuse purposes
<CustomBtn@Button>:
    size_hint: 0.3, 0.1
    pos_hint: {'x': 0.35, 'y': 0.15}
    background_color: 0, 0.004, 0.98, 1

<LogoLabel@Label>:
    id: app_logo__name
    markup: True
    text: '[b]RosterAI[/b]'
    color: 0, 0.004, 0.98, 1
    font_size: '22sp'
    pos_hint: {'x': -0.35, 'y': 0.4}

<HeaderLabel@Label>:
    markup: True
    color: 0, 0.004, 0.98, 1
    font_size: '16sp'
    pos_hint: {'x': 0, 'y': 0.3}

<CustomFloat@FloatLayout>:
    canvas:
        Color:
            rgba: 0.98, 0.98, 0.98, 0.75
        Rectangle:
            pos: self.pos
            size: self.size
    background_color: 0.98, 0.98, 0.98, 1

<ListLabel@Label>:
    id: list_name
    color: 0, 0, 0, 1
    font_size: '16sp'
    text_size: self.width*0.5, None

<DateLabel@Label>:
    id: date_added
    text: '25 August 2023'
    size: self.size
    color: 0, 0, 0, 1

<UseButton@Button>:
    id: use_list
    text: 'use list'
    background_color: 0, 0.039, 0.98, 1

<CircularButton>:
    canvas:
        RoundedRectangle:
            source: './add_icon.png'
            pos: self.pos
            size: self.size
            radius: 900,
    size_hint: 0.07, 0.07
    pos_hint: {'x': 0.45, 'y': 0.2}
    on_press: root.add_list()
    on_release:
        print("This is the button made up by the canvas")

<CustomFillingBox@BoxLayout>:
    canvas:
        Color:
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    size_hint: 0.8, 0.4
    pos_hint: {'x': 0.1, 'y': 0.35}

