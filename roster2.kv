            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y': 0.2}
            padding: 2
            spacing: 5
            TextInput:
                hint_text: 'Enter Name here'
                size_hint: 0.6,1
            Button:
                text: 'Add'
                size_hint: 0.2, 1
                background_color: 1, 1, 1, 1
                on_press: root.adding_list()
        Button:
            text: 'submit'
            size_hint: 0.8, 0.1
            background_color: 1, 1, 1, 1
            pos_hint: {'x': 0.1, 'y': 0.07}
            background_color: 0, 0.039, 0.98, 1



