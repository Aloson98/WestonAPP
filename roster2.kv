<AddWidget>:
    name_list: name_list
    canvas:
        Rectangle:
            source: './bckground.jpg'
            pos: self.pos
            size: self.size
    CustomFloat:
        size: root.width*0.8, root.height*0.8
        pos: root.x + root.width*0.1, root.y + root.height*0.1
        LogoLabel:
        Label:
            id: ward_title
            markup: True
            text: '[b]ward 20[/b]'
