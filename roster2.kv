<RegisterWidget>:
    ward_name: ward_name
    username: username
    password: password
    password2: password2

    canvas:
        Rectangle:
            source: './bckground.jpg'
            pos: self.pos
            size: self.size
    
    FloatLayout:
        canvas:
            Color:
                rgba: 0.98, 0.98, 0.98, 0.75
            Rectangle:
                pos: self.pos
                size: self.size
        size: root.width*0.8, root.height*0.8
        pos: root.x + root.width*0.1, root.y + root.width*0.1
        Label:
            id: app_name
            markup: True
            text: '[b]RosterAI[/b]'
            color: 0, 0.004, 0.98, 1
            font_size: '22sp'
            pos_hint: {'x': -0.35, 'y': 0.4}
        Label:
            id: register_title
            markup: True
            text: '[b]Register To continue[/b]'
            color: 0, 0.004, 0.98, 1
            font_size: '21sp'
            pos_hint: { 'x': 0.03, 'y': 0.25}
        TextInput:
            id: ward_name
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.6}
            text: 'ward name'
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
        TextInput:
            id: username
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.5}
            text: 'username'
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
        TextInput:
            id: password
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.4}
            text: 'password'
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
        TextInput:
            id: password2
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.3}
            text: 'Repeat Password'
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
            hint_text: 'here goes the hint'
        Button:
            id: sign_up
            text: 'sign up'
            on_press: root.create()
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.2}
            background_color: 0, 0.004, 0.98, 1
        Label:
            id: login_url
            markup: True
            text: 'already have an account '
            pos_hint: {'x': -0.01, 'y': -0.35}
            color: 0, 0, 0, 1
        Button:
            id: login
            text: 'sign in'
            color: 0, 0.039, 0.98, 1
            background_color: 0, 0, 0, 0
            pos_hint: {'x': 0.16, 'y': -0.35}
            on_press: root.sign_in()


