#:kivy 2.2.1

#here stay the custom widgets to be re-used tie after time
<CustomFloat@FloatLayout>:
    canvas:
        Color:
            rgba: 0.98, 0.98, 0.98, 0.75
        Rectangle:
            pos: self.pos
            size: self.size
    background_color: 0.98, 0.98, 0.98, 1


<LogoLabel@Label>:
    id: app_logo
    markup: True
    text: '[b]RosterAI[/b]'
    color: 0, 0.004, 0.98, 1
    font_size: '23sp'
    pos_hint: {'x': -0.35, 'y': 0.4}

<HeaderLabel@Label>:
    markup: True
    color: 0, 0.004, 0.98, 1
    font_size: '16sp'

<CustomBtn@Button>:
    size_hint: 0.3, 0.1
    pos_hint: {'x': 0.35, 'y': 0.15}
    background_color: 0, 0.004, 0.98, 1


#The screen Widgets start from here
<IndexScreen>:
    canvas:
        Rectangle:
            source: './bckground.jpg'
            pos: self.pos
            size: self.size
    CustomFloat:
        size_hint: 0.8, 0.8
        pos: root.x + root.width*0.1, root.y + root.height*0.1
        Label:
            id: app_name
            markup: True
            text: '[b]RosterAI[/b]'
            color: 0, 0.004, 0.98, 1
            font_size: '23sp'
            pos_hint: {'x': 0, 'y': 0.2}
        Label:
            id: welcome_text
            markup: True
            text: 'Welcome to rosterAI application, where time is saved\n And [s]Biases[/s] reduced. \n In just few simple click, roster is created automatic for you. \n Created by AfyaBase[sup]TM[/sup]'
            halign: 'center'
            color: 0, 0, 0, 1
            pos_hint: {'x': 0, 'y': 0}
        CustomBtn:
            id: get_started
            text: 'Get started'
            on_press: root.starting_page()


<homeScreen>:
    canvas:
        Rectangle:
            source: './bckground.jpg'
            pos: self.pos
            size: self.size
    
    CustomFloat:
        size_hint: 0.8, 0.8
        pos: root.x + root.width*0.1, root.y + root.height*0.1
        LogoLabel:
        Label:
            id: welcome_text
            markup: True
            text: 'Sign in Successfull'
            halign: 'center'
            color: 0, 0, 0, 1
            pos_hint: {'x': 0, 'y': 0}
        Button:
            id: get_started
            text: 'Add staff'
            size_hint: 0.3, 0.1
            pos_hint: {'x': 0.35, 'y': 0.15}
            background_color: 0, 0.004, 0.98, 1
            on_press:


<RegisterScreen>:
    ward_name: ward_name
    username: username
    password: password
    password2: password2

    canvas:
        Rectangle:
            source: './bckground.jpg'
            pos: self.pos
            size: self.size
    
    CustomFloat:
        size_hint: 0.8, 0.8
        pos: root.x + root.width*0.1, root.y + root.width*0.1
        LogoLabel:
        HeaderLabel:
            id: register_title
            text: '[b]Register To continue[/b]'
            pos_hint: { 'x': 0.03, 'y': 0.25}
        TextInput:
            id: ward_name
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.6}
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
            hint_text: 'ward name'
        TextInput:
            id: username
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.5}
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
            hint_text: 'username'
        TextInput:
            id: password
            password: True
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.4}
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
            hint_text: 'password'
        TextInput:
            id: password2
            password: True
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.3}
            font_size: '13sp'
            halign: 'center'
            foreground_color: 0, 0, 0, 0.6
            allow_copy: True
            hint_text: 'repeat password'
        Button:
            id: sign_up
            text: 'sign up'
            on_press: root.create()
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.35, 'y': 0.2}
            background_color: 0, 0.004, 0.98, 1
        Label:
            id: login_url
            markup: True
            text: 'already have an account '
            pos_hint: {'x': -0.01, 'y': -0.35}
            color: 0, 0, 0, 1
        Button:
            id: login
            text: 'sign in'
            color: 0, 0.039, 0.98, 1
            background_color: 0, 0, 0, 0
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.61, 'y': 0.1}
            on_press: root.sign_in()


<ThankScreen>:
    canvas:
        Rectangle:
            source: './bckground.jpg'
            pos: self.pos
            size: self.size
    
    CustomFloat:
        size_hint: 0.8, 0.8
        pos: root.x + root.width*0.1, root.y + root.width*0.1
        LogoLabel:
        Label:
            id: congratulation
            markup: True
            text: '[color=#000afa]Congratulations[/color] \n You have Successfull created an Acount'
            halign: 'center'
            valign: 'middle'
            color: 0, 0, 0, 1
            font_size: '16sp'
            pos_hint: {'x': 0, 'y': 0}
        Button:
            text: 'Back to Login page'
            size_hint: 0.6, 0.05
            pos_hint: {'x': 0.2, 'y': 0.1}
            on_press: root.back()


<LoginScreen>:
    username: username
    password: password
    username_error: username_error
    password_error: password_error

    canvas:
        Rectangle:
            source: './bckground.jpg'
            pos: self.pos
            size: self.size
    CustomFloat:
        size_hint: 0.8, 0.8
        pos: root.x + root.width*0.1, root.y + root.height*0.1
        LogoLabel:
        HeaderLabel:
            id: login_title
            text: '[b]login to continue[/b]'
            pos_hint: {'x': -0.025, 'y': 0.25}
        TextInput:
            id: username
            foreground_color: 0, 0, 0, 0.6
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.3, 'y': 0.6}
            hint_text: 'username'
        Label:
            id: username_error
            color: 1, 0, 0, 1
            size_hint: 0.2, 0.03
            pos_hint: {'x': 0.5, 'y': 0.57}
        TextInput:
            id: password
            password: True
            foreground_color: 0, 0, 0, 0.6
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.3, 'y': 0.5}
            hint_text: 'password'
        Label:
            id: password_error
            color: 1, 0, 0, 1
            size_hint: 0.2, 0.03
            pos_hint: {'x': 0.5, 'y': 0.47}
        Button:
            text: 'forgot password?'
            color: 0.98, 0, 0, 1
            size_hint: 0.2, 0.06
            pos_hint: {'x': 0.45, 'y': 0.4}
            background_color: 0, 0, 0, 0
            halign: 'right'
        Button:
            text: 'login'
            #color: 0.98, 0, 0, 1
            size_hint: 0.35, 0.06
            pos_hint: {'x': 0.3, 'y': 0.3}
            background_color: 0, 0.039, 0.98, 1
            on_press: root.sign_in()
        Label:
            id: login_url
            markup: True
            text: "don't have an acount? "
            pos_hint: {'x': -0.08, 'y': -0.25}
            color: 0, 0, 0, 1
        Button:
            id: signup_url
            text: 'sign up'
            color: 0, 0.039, 0.98, 1
            background_color: 0, 0, 0, 0
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.53, 'y': 0.2}
            on_press: root.sign_up()
